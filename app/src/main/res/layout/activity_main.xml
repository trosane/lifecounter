                android:layout_marginEnd="40dp"
                android:clickable="true"
                android:onClick="P2buttonTouch"
                android:textColor="#000000"
                android:background = "@drawable/roundedbutton"
                android:backgroundTint="#FFAAAA"
                android:layout_weight="1"/>


        </TableRow>

